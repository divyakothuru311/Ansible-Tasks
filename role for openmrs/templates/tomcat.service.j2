[Unit]
Description=Apache Tomcat Web Application Container
After=network.target
[Service]
Type=forking
Environment=JAVA_HOME=/usr/lib/jvm/java-1.8.0-openjdk-amd64
Environment=CATALINA_PID={{ homedir }}/temp/tomcat.pid
Environment=CATALINA_HOME={{ homedir }}
Environment=CATALINA_BASE={{ homedir }}
Environment=’CATALINA_OPTS=-Xms512M -Xmx1024M -server -XX:+UseParallelGC’
ExecStart={{ homedir }}/bin/startup.sh
ExecStop={{ homedir }}/bin/shutdown.sh
User= {{ user }}
Group= {{ group }}
UMask=0007
RestartSec=10
Restart=always
[Install]
WantedBy=multi-user.target